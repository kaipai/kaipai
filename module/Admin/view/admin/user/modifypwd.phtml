<script type="text/javascript">
    $(function () {
        //保存SA
        $('#saveSa').click(function () {
            var oldPassword = $("#oldPassword").val();
            var newPassword = $("#newPassword").val();
            var confirmPassword = $("#confirmPassword").val();
            var param = {oldPassword: oldPassword, newPassword: newPassword, confirmPassword: confirmPassword};
            $.post('/admin/user/modifypwd', param, function (data) {
                if (data.flag > 0) {
                    alertSuccess(data.msg);
                } else{
                    alertError(data.msg);

                }
            }, 'json');
        });
    });
</script>