                field: 'nickName',
                title: '用户名称',
                align: 'center',
                valign: 'middle',
                width: '200px'
            },{
                field: 'mobile',
                title: '用户手机号',
                align: 'center',
                width: '200px',
                valign: 'middle'
            }, {
                field: 'title',
                title: '商品名称',
                align: 'center',
                valign: 'middle'
            },{
                field: 'customizationCount',
                title: '商品数量',
                align: 'center',
                valign: 'middle'

            },{
                field: 'payMoney',
                title: '定金',
                align: 'center',
                width: '400px',
                valign: 'middle'
            },/*{
                field: 'finalPrice',
                title: '尾款',
                align: 'center',
                valign: 'middle'
            },*/{
                field: 'delivery',
                title: '收货人信息',
                align: 'center',
                valign: 'middle',
                formatter : function(value, row, index){
                    var str = '';
                    if(value.receiverName){
                        str += '收货人姓名: ' + value.receiverName + '<br />';
                        str += '收货人电话: ' + value.receiverMobile + '<br />';
                        str += '收货人地址: ' + value.receiverAddr;
                    }



                    return str;
                }
            },{
                field: 'payType',
                title: '支付方式',
                align: 'center',
                valign: 'middle',
                width:200,
                formatter: function(value, row, index){
                    var s = '';
                    if(value == 1){
                        s += '余额';
                    }else if(value == 2){
                        s += '支付宝';
                    }else if(value == 3){
                        s += '银联';
                    }else if(value == 4){
                        s += '银行转账';
                        if(row.orderStatus == 1){
                            s += '<a title="确认到账" href="javascript:void(0)" class="col-md-4 text-success confirm-btn" boxsize="modal-sm" ctitle="确认提示" cbody="确认到账吗?" url="/admin/<?=$this->layout()->controllerName;?>/confirm-paid" method="post" params="unitePayID='+ row.unitePayID +'&type=1"><i class="glyphicon glyphicon-ok"></i></a>';
